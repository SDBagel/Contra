@model IEnumerable<List<Article>>

@{
    ViewData["Title"] = "Home";
}

<div class="content">
    <div class="section-title">
        <h2>Trending Now</h2>
    </div>
    <section>
        <div class="card card-big story" onclick="redirect(@Model.ElementAt(0)[0].Id)">
            <span class="image-container"><img src=@Model.ElementAt(0)[0].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(0)[0].Title</h2>
                <p>@Model.ElementAt(0)[0].SummaryLong</p>
            </div>
        </div>
        <div class="card card-encapsulate story" onclick="redirect(@Model.ElementAt(0)[1].Id)">
            <span class="image-container"><img src=@Model.ElementAt(0)[1].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(0)[1].Title</h2>
                <p>@Model.ElementAt(0)[1].SummaryLong</p>
            </div>
        </div>
    </section>
    <section>
        <div class="card card-encapsulate story" onclick="redirect(@Model.ElementAt(0)[2].Id)">
            <span class="image-container"><img src=@Model.ElementAt(0)[2].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(0)[2].Title</h2>
                <p>@Model.ElementAt(0)[2].SummaryLong</p>
            </div>
        </div>
        <div class="card card-big story" onclick="redirect(@Model.ElementAt(0)[3].Id)">
            <span class="image-container"><img src=@Model.ElementAt(0)[3].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(0)[3].Title</h2>
                <p>@Model.ElementAt(0)[3].SummaryLong</p>
            </div>
        </div>
    </section>
    <div class="section-title">
        <h2>Editorials</h2>
    </div>
    <section>
        <div class="card card-big card-encapsulate story" onclick="redirect(@Model.ElementAt(1)[0].Id)">
            <span class="image-container"><img src=@Model.ElementAt(1)[0].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(1)[0].Title</h2>
                <p>@Model.ElementAt(1)[0].SummaryLong</p>
            </div>
        </div>
        <div class="card story" onclick="redirect(@Model.ElementAt(1)[1].Id)">
            <span class="image-container"><img src=@Model.ElementAt(1)[1].ThumbnailURL /></span>
            <div>
                <h2>@Model.ElementAt(1)[1].Title</h2>
                <p>@Model.ElementAt(1)[1].SummaryLong</p>
            </div>
        </div>
    </section>
    <div class="section-title">
        <h2>Support Student Journalism</h2>
    </div>
    <section>
        <div class="banner">
            <img src="~/img/paypal.svg" />
        </div>
    </section>
    <div id="loadSection">
        <div class="section-title">
            <h2><span id="query">New</span> Articles</h2>
        </div>
        <div id="loadTarget"></div>
    </div>
</div>