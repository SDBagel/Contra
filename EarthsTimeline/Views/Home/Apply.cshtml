@model EarthsTimeline.Models.Article

@{
    ViewData["Title"] = "Apply";
}

<div class="content">
    <div class="section-title">
        <h2>Submit an Article</h2>
    </div>
    <hr />
    <br />
    <form asp-action="Apply">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <section>
                <div>
                    <label class="control-label">MVLA Email ID (1000xxxxx)</label>
                    <input asp-for="AuthorId" class="form-control" />
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div>
                    <label class="control-label">Author Name(s)</label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </section>
        </div>
        <div class="form-group">
            <label asp-for="LargeThumbnailURL" class="control-label"></label>
            <input asp-for="LargeThumbnailURL" class="form-control" />
            <span asp-validation-for="LargeThumbnailURL" class="text-danger"></span>
            <p>Please provide a link to an image (not a file) to use as a thumbnail.</p>
        </div>
        <div class="form-group">
            <label asp-for="SmallThumbnailURL" class="control-label"></label>
            <input asp-for="SmallThumbnailURL" class="form-control" />
            <span asp-validation-for="SmallThumbnailURL" class="text-danger"></span>
            <p>If there is an alternate small image you'd like to use for certain parts of this site, you can insert a second url here.</p>
        </div>
        <div class="form-group">
            <label class="control-label">Article Tags</label>
            <input asp-for="SummaryShort" class="form-control" />
            <p>We recommend using tags like "News" or "Sports" as those get put into special categories for better viewability.</p>
            <span asp-validation-for="SummaryShort" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit Article" class="btn btn-primary" />
            <a href="~/">
                <input type="button" value="Cancel" class="btn btn-outline-dark" />
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
