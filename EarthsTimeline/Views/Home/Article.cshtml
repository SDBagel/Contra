@model EarthsTimeline.Models.Article

@{
    ViewData["Title"] = "Article";
}

<div class="content">
    <div class="section-title">
        <h2>Article - @Html.DisplayFor(model => model.Title)</h2>
    </div>
    @if (Model.Approved)
    {
        <section>
            <div class="card">
                <h2>@Model.AuthorName - @Model.Date.ToShortDateString()</h2>
            </div>
        </section>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LargeThumbnailURL)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LargeThumbnailURL)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>
    }
    else
    {
        <section>
            <div class="card">
                <h2>This Article is Not Approved Yet</h2>
                <p>This article has not been approved by our moderation team, and as such, cannot be displayed yet.</p>
                <br />
                <a href="~/">Meanwhile, check out some of our other articles.</a>
            </div>
        </section>
    }
</div>