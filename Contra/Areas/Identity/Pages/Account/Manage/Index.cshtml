@page
@model IndexModel

@using Microsoft.AspNetCore.Identity
@using Contra.Areas.Identity.Data
@inject UserManager<OpenTalonUser> UserManager

@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="ml-2">
    <h4>@ViewData["Title"]</h4>
    <form id="profile-form" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
        </div>
        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
<div id="loadSection">
    <div class="section-title">
        <span id="query" class="d-none">@UserManager.GetUserId(User)</span>
        <h2>Your Articles</h2>
    </div>
    <div id="loadTarget"></div>
    <br />
    <button id="loadButton" onclick="loadContent('@UserManager.GetUserId(User)')" class="btn btn-outline-info w-100">Load More</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}