
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="~/lib/DOMPurify/purify.min.js" asp-append-version="true"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        var mdtargets = document.getElementsByClassName("markdown");
        for (var m = 0; m < mdtargets.length; m++) {
            var md = mdtargets[m];
            md.innerHTML = DOMPurify.sanitize(marked(md.innerText));
        }
    });
</script>