@model Contra.Models.Article

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<div class="section-title">
    <h2>@Html.DisplayFor(model => model.Title)</h2>
</div>
<section>
    <div class="card article">
        <div class="image-container">
            <img src="@Model.ThumbnailURL" />
            <div class="secondary-info">
                <p>Views: @Model.Views</p>
            </div>
        </div>
        <div class="content">
            <h3>@Model.AuthorName - @Model.Date</h3>
            <p>Thumbnail URL - @Model.ThumbnailURL</p>
            <div class="actions">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a asp-action="Index">All Articles</a>
                <a class="text-danger clickable" onclick="confirmAction(this, 'api/v1/article/delete/@Model.Id')">Remove</a>
                @if (Model.Approved == ApprovalStatus.Approved)
                {<a class="text-danger clickable" onclick="confirmAction(this, 'api/v1/article/delist/@Model.Id')">Delist</a> }
                else
                { <a class="text-danger clickable" onclick="confirmAction(this, 'api/v1/article/approve/@Model.Id')">Approve</a>}
            </div>
            <br />
            <p>@Html.Raw(Model.Content)</p>
        </div>
    </div>
</section>

<div class="section-title">
    <h2>Comments</h2>
    <p class="text-secondary">@ViewData["PendingComments"] Pending</p>
</div>
<section>
    <partial name="_CommentPartial" />
</section>
@if (((List<Comment>)ViewData["Comments"]).Count != 0)
{
    <section>
        <div class="card card-compact">
            @foreach (Comment comment in (List<Comment>)ViewData["Comments"])
            {
                <div class="card card-compact comment">
                    <div>
                        <a name="@comment.Id"></a>
                        <h3>@comment.AuthorName - @comment.Date.ToLocalTime()</h3>
                        <p>@comment.Content</p>
                    </div>
                </div>
            }
        </div>
    </section>
}