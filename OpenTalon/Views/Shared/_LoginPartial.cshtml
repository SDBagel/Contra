@using Microsoft.AspNetCore.Identity
@using OpenTalon.Areas.Identity.Data
@inject SignInManager<OpenTalonUser> SignInManager
@inject UserManager<OpenTalonUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Staff"))
    {
        <a class="nav-link px-0" href="~/admin"><img src="~/img/superuser.png" /></a>
    }
    <a class="nav-link" href="~/apply">Create Post</a>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <img src="@UserManager.GetUserAsync(User).Result.ProfilePictureURL" alt="User Profile Picture" />
        @UserManager.GetUserAsync(User).Result.Name
    </a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark text-center">Logout</button>
    </form>
}
else
{
    <a class="nav-link" href="~/apply">Create Post</a>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
