@using Microsoft.AspNetCore.Identity
@using OpenTalon.Areas.Identity.Data
@inject SignInManager<OpenTalonUser> SignInManager
@inject UserManager<OpenTalonUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserAsync(User).Result.Name</a>
    <form class="form-inline nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark text-center">Logout</button>
    </form>
}
else
{
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
