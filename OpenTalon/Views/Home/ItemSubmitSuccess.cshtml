
@{
    ViewData["Title"] = "Success";
}

<div id="main">
    <div class="section-title">
        <h2>Submission Success</h2>
    </div>
    <section>
        <div class="card card-compact">
            <div>
                <h2>Item successfully submitted.</h2>
                @if (User.IsInRole("Staff"))
                {
                    <span class="secondary-info"><img src="~/img/superuser.png" alt="Superuser" /></span>
                    <p>Your item has been published.</p>
                }
                else
                {
                    <p>Congratulations! Your item has been successfully submitted and will be reviewed by our staff before being published. While you wait, why not check out one of our other articles?</p>
                }
                <a class="btn btn-outline-info" href="~/">Return to Homepage</a>
            </div>
        </div>
    </section>

    <div id="loadSection">
        <div class="section-title">
            <h2><span id="query">New</span> Articles</h2>
        </div>
        <div id="loadTarget"></div>
        <button id="loadButton" onclick="loadContent('New')" class="btn btn-outline-info w-100">Load More</button>
    </div>
</div>